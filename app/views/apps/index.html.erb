<% provide(:title, 'All Apps') %>
<h1>All Apps</h1>

<ul class="apps">
  <% @apps.each do |app| %>
    <li>
      <%= image_tag "asonios.png", size: 52 %>
      <%= link_to app.name, app %>
      <%= app.description %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a New App", addapp_path, class: "btn btn-large btn-primary" %>

